bool searchFilterList(
  String name,
  String gender,
  String city,
  String state,
  String searchTerm,
) {
  /// MODIFY CODE ONLY BELOW THIS LINE

  return name.toLowerCase().contains(searchTerm.toLowerCase()) ||
      gender.toLowerCase().contains(searchTerm.toLowerCase()) ||
      city.toLowerCase().contains(searchTerm.toLowerCase()) ||
      state.toLowerCase().contains(searchTerm.toLowerCase());

  /// MODIFY CODE ONLY ABOVE THIS LINE
}

//Here it will return True or False. In flutterflow we can using conditional visibility , if the searching term or character or
// word conatins it will return True then it will visible or wise not.....

